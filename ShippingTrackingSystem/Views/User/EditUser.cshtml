@model ShippingTrackingSystem.Models.ApplicationUser

<style>
    body {
        background-color: #e9ecef;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        border-radius: 25px;
        background-color: white;
        margin-top: 5%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-top {
        background: linear-gradient(135deg, #007bff, #002853);
        color: white;
        padding: 2rem;
        border-top-left-radius: 25px;
        border-top-right-radius: 25px;
        text-align: center;
    }

    .form-control {
        border-radius: 15px;
        border: 1px solid #ced4da;
    }

    .register-btn {
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        background: linear-gradient(135deg, #0069d9, #005cbf);
        color: white;
        border: none;
        transition: all 0.3s ease;
        float: right;
    }

        .register-btn:hover {
            background: linear-gradient(135deg, #005cbf, #004085);
            box-shadow: 0 0 10px rgba(0, 92, 191, 0.5);
        }

    .required {
        color: red;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="register-container">
            <div class="register-top">
                <h2>Edit User</h2>
                <p>Update user details...</p>
            </div>
            <div class="p-lg-5">
                <form asp-action="EditUser" method="post" id="registerForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label">Username<span class="required">*</span></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email<span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="roleName" class="form-label">Role<span class="required">*</span></label>
                                @if (ViewBag.Roles != null)
                                {
                                    <select id="roleName" name="roleName" asp-items="@ViewBag.Roles" class="select2-dropdown form-control" required style="width:100%;"></select>
                                }
                                else
                                {
                                    <select id="roleName" name="roleName" class="select2-dropdown form-control" required>
                                        <option>No options ...</option>
                                    </select>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address" class="control-label">Address<span class="required">*</span></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4 mb-5">
                        <button type="submit" class="btn register-btn">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.select2-dropdown').select2();
        });
    </script>
}
