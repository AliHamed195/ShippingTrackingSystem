@model IEnumerable<ShippingTrackingSystem.Models.ApplicationUser>

<div class="row mt-3 mb-4">
    <div class="col-md-2">
        <a class="btn btn-outline-primary" href="/User/Create">Create New</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr id="user-@user.Id">
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="/User/Edit/@user.Id">Edit</a>
                    <button class="btn btn-danger btn-sm" onclick="deleteUser('@user.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <!-- In the <head> section of your layout -->
    <link rel="stylesheet" href="~/lib/datatable/dataTables.bootstrap4.min.css" />

    <!-- Before the closing </body> tag in your layout -->
    <script src="~/lib/datatable/jquery.dataTables.min.js"></script>

    <script src="~/lib/datatable/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('.table').DataTable(); 
        });

        function deleteUser(id) {
            Swal.fire({
                title: 'Are you sure you want to delete this user?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete him!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/User/Delete/' + id,
                        type: 'GET',
                        success: function (response) {
                            if (response.success) {
                                var table = $('.table').DataTable(); 
                                table.row($('#user-' + id)).remove().draw();

                                Swal.fire(
                                    'Cancelled!',
                                    response.message,
                                    'success'
                                );
                            } else {
                                Swal.fire(
                                    'Error!',
                                    response.message,
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'Error!',
                                'Error while deleting the user.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}

